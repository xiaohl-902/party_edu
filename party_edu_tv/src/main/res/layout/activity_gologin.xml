<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#324552"
    tools:context="com.igreatstone.partyedu.GoLoginActivity">

    <LinearLayout
        android:layout_width="@dimen/x600"
        android:layout_height="@dimen/y392"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#324552"
        android:orientation="vertical"
        android:weightSum="4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="用户"
            android:textColor="#fff"
            android:textSize="30px"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/phone_number"
            android:layout_width="@dimen/x334"
            android:layout_height="@dimen/y20"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="登录帐号/手机号码" />


        <EditText
            android:id="@+id/password_number"
            android:layout_width="@dimen/x334"
            android:layout_height="@dimen/y20"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="密码" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="@dimen/x334"
            android:layout_height="@dimen/y20"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#324552"
            android:text="立即登录"
            android:textSize="30px"></Button>

    </LinearLayout>
</RelativeLayout>
